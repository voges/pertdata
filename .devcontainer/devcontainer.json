{
	"name": "pertdata",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"ms-python.python",
				"charliermarsh.ruff",
				"ms-toolsai.jupyter",
				"mutantdino.resourcemonitor",
				"ms-toolsai.datawrangler"
			]
		}
	},
	"runArgs": ["--name", "pertdata"],
	"postCreateCommand": "bash .devcontainer/post_create.sh",
	"remoteUser": "vscode"
}
